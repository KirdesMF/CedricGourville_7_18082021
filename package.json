    "dotenv": "^10.0.0",
    "dotenv-cli": "^4.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.13.0",
    "imagekit": "^3.2.2",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.3"
  }
